[
  {
    "id": "weather-pocrane",
    "name": "Pocrane Weather Monitor",
    "description": "Monitor weather conditions in Pocrane, MG, Brazil every minute",
    "triggers": [
      {
        "id": "weather_cron_trigger",
        "type": "schedule",
        "configuration": {
          "cron": "* * * * *",
          "timezone": "America/Sao_Paulo"
        }
      }
    ],
    "variables": {
      "location": "Pocrane,MG,BR",
      "api_key": "demo_key"
    },
    "metadata": {
      "tags": ["weather", "pocrane", "brazil", "monitor"]
    },
    "created_at": "2025-06-15T04:00:00Z",
    "updated_at": "2025-06-15T04:00:00Z",
    "status": "active",
    "steps": [
      {
        "id": "fetch_weather",
        "conditional": {},
        "enabled": true,
        "on_success": "process_weather",
        "action": {
          "id": "fetch_weather",
          "type": "http_request",
          "name": "Fetch Weather Data",
          "description": "Fetch current weather data from OpenWeatherMap API",
          "configuration": {
            "method": "GET",
            "url": "https://httpbin.org/json",
            "headers": {
              "Accept": "application/json"
            },
            "retry": {
              "attempts": 2,
              "delay": 3
            }
          }
        }
      },
      {
        "id": "process_weather",
        "conditional": {},
        "enabled": true,
        "on_success": "log_weather",
        "action": {
          "id": "process_weather",
          "type": "transform",
          "name": "Process Weather Data",
          "description": "Extract relevant weather information",
          "configuration": {
            "input": "$.fetch_weather",
            "exp": "weather_data_transform"
          }
        }
      },
      {
        "id": "log_weather",
        "conditional": {},
        "enabled": true,
        "on_success": "save_weather",
        "action": {
          "id": "log_weather",
          "type": "log",
          "name": "Log Weather Update",
          "description": "Log weather information",
          "configuration": {
            "id": "log_weather",
            "message": "Weather updated for Pocrane, MG",
            "level": "info"
          }
        }
      },
      {
        "id": "save_weather",
        "conditional": {},
        "enabled": true,
        "action": {
          "id": "save_weather",
          "type": "file_write",
          "name": "Save Weather to File",
          "description": "Save weather data to timestamped file",
          "configuration": {
            "file_name": "pocrane_weather.json",
            "directory": "/tmp/weather",
            "overwrite": true
          }
        }
      }
    ]
  }
]