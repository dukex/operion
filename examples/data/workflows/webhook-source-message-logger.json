{
  "id": "webhook-source-message-logger",
  "name": "Webhook Message Logger",
  "description": "Simple workflow that receives webhooks and logs the 'message' attribute from JSON body",
  "nodes": [
    {
      "id": "webhook-trigger-1",
      "name": "Webhook Source Trigger",
      "node_type": "trigger:webhook",
      "category": "trigger",
      "config": {
        "json_schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "description": "The message content to be logged"
            }
          },
          "required": [
            "message"
          ],
          "additionalProperties": true
        }
      },
      "enabled": true,
      "source_id": "message-webhook-source",
      "provider_id": "webhook",
      "event_type": "webhook_received",
      "position_x": 50,
      "position_y": 100
    },
    {
      "id": "log-message",
      "name": "Log Webhook Message",
      "config": {
        "message": "Webhook received: {{.trigger_data.body.message}}"
      },
      "position_x": 100,
      "position_y": 100,
      "enabled": true,
      "node_type": "log",
      "category": "action"
    }
  ],
  "connections": [
    {
      "id": "trigger-webhook-trigger-1-to-log-message",
      "source_port": "webhook-trigger-1:success",
      "target_port": "log-message:main"
    }
  ],
  "variables": {},
  "status": "published",
  "workflow_group_id": "webhook-source-message-logger",
  "published_at": "2023-10-01T00:00:00Z",
  "metadata": {
    "author": "Operion Example",
    "description": "Simple webhook message logging workflow",
    "tags": [
      "webhook",
      "source-provider",
      "simple"
    ],
    "version": "1.0",
    "usage_instructions": [
      "1. Start source manager: SOURCE_PROVIDERS='webhook' operion-source-manager",
      "2. Send POST to webhook URL with JSON: {\"message\": \"Hello World!\"}",
      "3. Check logs to see the message"
    ]
  },
  "owner": "system",
  "created_at": "2025-08-07T16:00:00Z",
  "updated_at": "2025-08-07T16:00:00Z"
}