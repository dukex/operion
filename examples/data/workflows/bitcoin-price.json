      },
      "name": "bitcoin_data",
      "conditional": {
        "language": "",
        "expression": ""
      },
      "on_success": "8de00551-e4de-48bf-aeff-21d394c86a9e",
      "on_failure": "temp_l7oaen33g",
      "enabled": true
    },
    {
